CREATE OR REPLACE FUNCTION protect_table (TEXT)
 RETURNS TEXT AS
$BODY$
DECLARE
BEGIN

EXECUTE 'ALTER TABLE '|| $1 ||' ADD COLUMN rule uuid';
EXECUTE 'ALTER TABLE '|| $1 ||' RENAME TO ' || $1 || '_protected';
EXECUTE 'CREATE OR REPLACE VIEW  '|| $1 ||' AS SELECT * FROM ' || $1 || '_protected';

RETURN '';
END;
$BODY$
 LANGUAGE plpgsql;